@inject Microsoft.AspNetCore.Identity.SignInManager<WebAppFin.Models.ApplicationUser> signInManager

@model WebAppFin.Models.ShoppingLists

<form method="post" asp-action="CreateList">
    <div asp-validation-summary="All" class="text-black"></div>
    <div class="border p-3">
        <h2 class="text-black-20 mb-3">Create New List</h2>
        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="ListId" class="form-label">List Id</label>
                <input asp-for="ListId" class="form-control" />
                <span asp-validation-for="ListId" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="ListName" class="form-label">List Name</label>
                <input asp-for="ListName" class="form-control" />
                <span asp-validation-for="ListName" class="text-danger"></span>
            </div>

            <input type="hidden" name="UserName" value="@User.Identity.Name" />



        </div>

        <div class="row mt-3">
            <div class="col-4">
                <input type="submit" class="btn btn-info w-100" value="Create" />
            </div>
        </div>
    </div>
</form>

